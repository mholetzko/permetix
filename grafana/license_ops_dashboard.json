{
  "title": "License Ops Overview",
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "5s",
  "panels": [
    {
      "type": "timeseries",
      "title": "License Borrow Attempts (rate/min) by tool",
      "gridPos": { "x": 0, "y": 0, "w": 24, "h": 8 },
      "targets": [
        {
          "refId": "A",
          "expr": "sum by (tool) (rate(license_borrow_attempts_total[1m]))",
          "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" }
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "HTTP 500s (rate/min)",
      "gridPos": { "x": 0, "y": 8, "w": 12, "h": 8 },
      "targets": [
        {
          "refId": "A",
          "expr": "sum by (route) (rate(license_http_500_total[1m]))",
          "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" }
        }
      ]
    },
    {
      "type": "stat",
      "title": "500s last minute",
      "gridPos": { "x": 12, "y": 8, "w": 4, "h": 8 },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(increase(license_http_500_total[1m]))",
          "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" }
        }
      ],
      "alert": {
        "conditions": [
          {
            "evaluator": { "params": [5], "type": "gt" },
            "operator": { "type": "and" },
            "query": { "params": ["A", "1m", "now"] },
            "reducer": { "params": [], "type": "last" },
            "type": "query"
          }
        ],
        "executionErrorState": "alerting",
        "for": "1m",
        "frequency": "10s",
        "handler": 1,
        "name": "High 500 Error Rate",
        "noDataState": "no_data",
        "notifications": []
      }
    },
    {
      "type": "stat",
      "title": "Borrow attempts last minute",
      "gridPos": { "x": 16, "y": 8, "w": 8, "h": 8 },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(increase(license_borrow_attempts_total[1m]))",
          "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" }
        }
      ]
    },
    {
      "type": "piechart",
      "title": "HTTP Status Codes Distribution (last 5m)",
      "gridPos": { "x": 0, "y": 16, "w": 12, "h": 8 },
      "targets": [
        {
          "refId": "A",
          "expr": "sum by (status_code) (increase(license_http_requests_total[5m])) > 0",
          "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
          "legendFormat": "{{status_code}}"
        }
      ],
      "options": {
        "pieType": "pie",
        "tooltip": {
          "mode": "single"
        },
        "legend": {
          "displayMode": "table",
          "placement": "right",
          "values": ["value", "percent"]
        },
        "reduceOptions": {
          "values": false,
          "calcs": ["lastNotNull"]
        }
      }
    },
    {
      "type": "timeseries",
      "title": "HTTP Status Codes Over Time",
      "gridPos": { "x": 12, "y": 16, "w": 12, "h": 8 },
      "targets": [
        {
          "refId": "A",
          "expr": "sum by (status_code) (rate(license_http_requests_total[1m]))",
          "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
          "legendFormat": "{{status_code}}"
        }
      ]
    }
  ],
  "templating": {
    "list": [
      {
        "name": "DS_PROMETHEUS",
        "type": "datasource",
        "query": "prometheus",
        "hide": 0
      }
    ]
  },
  "annotations": { "list": [] }
}

