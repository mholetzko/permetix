{
  "title": "License Ops Overview",
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "5s",
  "panels": [
    {
      "type": "timeseries",
      "title": "License Borrow Attempts (rate/min) by tool",
      "gridPos": { "x": 0, "y": 0, "w": 24, "h": 8 },
      "targets": [
        {
          "refId": "A",
          "expr": "sum by (tool) (rate(license_borrow_attempts_total[1m]))",
          "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" }
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "HTTP 500s (rate/min)",
      "gridPos": { "x": 0, "y": 8, "w": 12, "h": 8 },
      "targets": [
        {
          "refId": "A",
          "expr": "sum by (route) (rate(license_http_requests_total{status_code=\"500\"}[1m]))",
          "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" }
        }
      ]
    },
    {
      "type": "stat",
      "title": "500s last minute (max)",
      "gridPos": { "x": 12, "y": 8, "w": 4, "h": 8 },
      "targets": [
        {
          "refId": "A",
          "expr": "max_over_time(sum(increase(license_http_requests_total{status_code=\"500\"}[1m]))[5m:1m]) or vector(0)",
          "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" }
        }
      ],
      "fieldConfig": {
        "defaults": {
          "mappings": [
            {
              "options": {
                "from": 5,
                "to": null,
                "result": {
                  "text": "HIGH",
                  "color": "red"
                }
              },
              "type": "range"
            },
            {
              "options": {
                "from": 0,
                "to": 5,
                "result": {
                  "text": "OK",
                  "color": "green"
                }
              },
              "type": "range"
            }
          ],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "value": null, "color": "green" },
              { "value": 5, "color": "red" }
            ]
          }
        }
      },
      "options": {
        "colorMode": "value",
        "graphMode": "area",
        "justifyMode": "auto",
        "orientation": "auto",
        "reduceOptions": {
          "values": false,
          "calcs": ["lastNotNull"],
          "fields": ""
        },
        "textMode": "auto"
      },
      "alert": {
        "conditions": [
          {
            "evaluator": { "params": [5], "type": "gt" },
            "operator": { "type": "and" },
            "query": { "params": ["A", "1m", "now"] },
            "reducer": { "params": [], "type": "lastNotNull" },
            "type": "query"
          }
        ],
        "executionErrorState": "alerting",
        "for": "1m",
        "frequency": "10s",
        "handler": 1,
        "name": "High 500 Error Rate",
        "noDataState": "no_data",
        "notifications": []
      }
    },
    {
      "type": "table",
      "title": "Status Codes per Endpoint (last 5m)",
      "gridPos": { "x": 0, "y": 24, "w": 12, "h": 8 },
      "targets": [
        {
          "refId": "A",
          "expr": "sum by (route, status_code) (increase(license_http_requests_total[5m])) > 0",
          "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
          "format": "table",
          "instant": true
        }
      ],
      "transformations": [
        {
          "id": "organize",
          "options": {
            "excludeByName": {
              "Time": true
            },
            "indexByName": {
              "route": 0,
              "status_code": 1,
              "Value": 2
            },
            "renameByName": {
              "route": "Endpoint",
              "status_code": "Status",
              "Value": "Count"
            }
          }
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "align": "left"
          },
          "mappings": []
        },
        "overrides": []
      }
    },
    {
      "type": "timeseries",
      "title": "Request Performance (p50, p95, p99)",
      "gridPos": { "x": 12, "y": 24, "w": 12, "h": 8 },
      "targets": [
        {
          "refId": "A",
          "expr": "histogram_quantile(0.50, sum(rate(license_http_request_duration_seconds_bucket[5m])) by (le, route))",
          "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
          "legendFormat": "p50 - {{route}}"
        },
        {
          "refId": "B",
          "expr": "histogram_quantile(0.95, sum(rate(license_http_request_duration_seconds_bucket[5m])) by (le, route))",
          "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
          "legendFormat": "p95 - {{route}}"
        },
        {
          "refId": "C",
          "expr": "histogram_quantile(0.99, sum(rate(license_http_request_duration_seconds_bucket[5m])) by (le, route))",
          "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
          "legendFormat": "p99 - {{route}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth"
          }
        }
      }
    },
    {
      "type": "traces",
      "title": "Request Traces",
      "gridPos": { "x": 0, "y": 32, "w": 24, "h": 12 },
      "targets": [
        {
          "query": "{ service.name = \"license-server\" }",
          "queryType": "traceql",
          "refId": "A",
          "datasource": { "type": "tempo", "uid": "${DS_TEMPO}" }
        }
      ],
      "options": {
        "showCommonLabels": false,
        "showSpanLinks": true,
        "dedupe": true,
        "query": "{ service.name = \"license-server\" }"
      }
    },
    {
      "type": "piechart",
      "title": "HTTP Status Codes Distribution (last 5m)",
      "gridPos": { "x": 0, "y": 16, "w": 12, "h": 8 },
      "targets": [
        {
          "refId": "A",
          "expr": "sum by (status_code) (increase(license_http_requests_total[5m])) > 0",
          "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
          "legendFormat": "{{status_code}}"
        }
      ],
      "options": {
        "pieType": "pie",
        "tooltip": {
          "mode": "single"
        },
        "legend": {
          "displayMode": "table",
          "placement": "right",
          "values": ["value", "percent"]
        },
        "reduceOptions": {
          "values": false,
          "calcs": ["lastNotNull"]
        }
      }
    },
    {
      "type": "timeseries",
      "title": "HTTP Status Codes Over Time",
      "gridPos": { "x": 12, "y": 16, "w": 12, "h": 8 },
      "targets": [
        {
          "refId": "A",
          "expr": "sum by (status_code) (rate(license_http_requests_total[1m]))",
          "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
          "legendFormat": "{{status_code}}"
        }
      ]
    }
  ],
  "templating": {
    "list": [
      {
        "name": "DS_PROMETHEUS",
        "type": "datasource",
        "query": "prometheus",
        "hide": 0
      },
      {
        "name": "DS_LOKI",
        "type": "datasource",
        "query": "loki",
        "hide": 0
      },
      {
        "name": "DS_TEMPO",
        "type": "datasource",
        "query": "tempo",
        "hide": 0
      }
    ]
  },
  "annotations": { "list": [] }
}

